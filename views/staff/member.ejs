<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ../common_head.ejs%>
    <style></style>
</head>
<body>
<%- include ../common_header.ejs%>
<div class="main-container">
    <div class="row">
        <%- include left_nav.ejs%>
        <div class="col-md-10 col-lg-10">
            <div class="main-part">
                <div class="h2">Member</div>
                <div class="divider"></div>
                <div class="row profile-title">
                    <div class="col-sm-3 col-sm-offset-2 text-right">
                        <img src="/staff/icon/<%=doc.staff.id%>?v=<%= doc.staff.icon_version%>" class="img-rounded user-icon" width="100" height="100">
                    </div>
                    <div class="col-sm-3 text-center staff-title">
                        <h1><%= doc.staff.nick%></h1>
                        <h5>NO.<%= doc.staff.id%></h5>
                    </div>
                </div>
                <div class="divider"></div>
                <div class="row">
                    <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="nick" class="col-sm-5 control-label">Nick:</label>
                        <div class="col-sm-6 form-display">
                            <%= doc.staff.nick%>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-sm-5 control-label">Email:</label>
                        <div class="col-sm-6 form-display">
                            <%= doc.staff.email%>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="nick_cn" class="col-sm-5 control-label">Chinese Name:</label>
                        <div class="col-sm-6 form-display">
                            <%= doc.staff.nick_cn%>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-5 control-label">Sex:</label>
                        <div class="col-sm-6 form-display">
                            <%if(doc.staff.sex){%>
                                Female
                            <%}else{%>
                                Male
                            <%}%>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="birth" class="col-sm-5 control-label">Birthday:</label>
                        <div class="col-sm-6 form-display">
                            <%= doc.staff.birth%>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="phone" class="col-sm-5 control-label">Phone:</label>
                        <div class="col-sm-6 form-display">
                            <%= doc.staff.phone%>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="qq" class="col-sm-5 control-label">QQ:</label>
                        <div class="col-sm-6 form-display">
                            <%= doc.staff.qq%>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="address" class="col-sm-5 control-label">Address:</label>
                        <div class="col-sm-6 form-display">
                            <%= doc.staff.address%>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="desc" class="col-sm-5 control-label">Description:</label>
                        <div class="col-sm-6 form-display">
                            <%= doc.staff.descp%>
                        </div>
                    </div>
                    <!--<div class="row">
                        <div class="col-sm-2 col-sm-offset-7">
                            <button class="btn btn-landmark btn-block" ng-click="update($event);">Save</button>
                        </div>
                    </div>-->
                </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ../common_footer.ejs%>
</body>
</html>
