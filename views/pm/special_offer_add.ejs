<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ../common_head.ejs%>
</head>
<body ng-controller="mainCtrl">
<%- include ../common_header.ejs%>
<div class="main-container">
    <div class="row">
        <%- include left_nav.ejs%>
        <div class="col-md-10 col-lg-10">
            <div class="main-part">
                <div class="h2"><%= doc.title%></div>
                <div class="divider"></div>
                <form role="form">
                    <div class="row">
                        <div class="form-group col-sm-4" ng-class="{'has-error':errorShow.title_us&&!offer.title_us}">
                            <label for="title_us">Title:</label>
                            <input type="text" id="title_us" ng-model="offer.title_us" class="form-control" placeholder="english title" required ng-blur="valid('title_us');">
                            <span class="text-danger" style="display: none;" remove-display-none ng-show="errorShow.title_us&&!offer.title_us">required</span>
                        </div>
                        <div class="form-group col-sm-4" ng-class="{'has-error':errorShow.title_cn&&!offer.title_cn}">
                            <label for="title_cn">Simple Chinese Title:</label>
                            <input type="text" id="title_cn" ng-model="offer.title_cn" class="form-control" placeholder="simple chinese title" required ng-blur="valid('title_cn');">
                            <span class="text-danger" style="display: none;" remove-display-none ng-show="errorShow.title_cn&&!offer.title_cn">required</span>
                        </div>
                        <div class="form-group col-sm-4" ng-class="{'has-error':errorShow.title_hk&&!offer.title_hk}">
                            <label for="title_hk">Traditional Chinese Title:</label>
                            <input type="text" id="title_hk" ng-model="offer.title_hk" class="form-control" placeholder="traditional chinese title" required ng-blur="valid('title_hk');">
                            <span class="text-danger" style="display: none;" remove-display-none ng-show="errorShow.title_hk&&!offer.title_hk">required</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-4" ng-class="{'has-error':errorShow.discount&&!discountValid}">
                            <label for="discount">Discount:</label>
                            <input type="text" id="discount" ng-model="offer.discount" class="form-control" required ng-blur="valid('discount');">
                            <span class="text-danger" style="display: none;" remove-display-none ng-show="errorShow.discount&&!discountValid">Invalid input</span>
                        </div>
                        <div class="form-group col-sm-4" ng-class="{'has-error':errorShow.price&&!priceValid}">
                            <label for="discount">Price(USD):</label>
                            <input type="text" id="price" ng-model="offer.price" class="form-control" required ng-blur="valid('price');">
                            <span class="text-danger" style="display: none;" remove-display-none ng-show="errorShow.price&&!priceValid">Invalid input</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-4">
                            <label for="remark">Remark:</label>
                            <textarea type="text" id="remark" ng-model="offer.remark" rows="6" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2 col-sm-offset-8">
                            <button class="btn btn-success btn-landmark btn-block" ng-click="submit($event);">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include ../common_footer.ejs%>
</body>
<script type="text/javascript" src="/requirejs_config.js"></script>
<script data-main="app/pm/specialOfferAddMain" src="/bower_components/requirejs/require.js"></script>
</html>
