<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ../common_head.ejs%>
</head>
<body>
<%- include ../common_header.ejs%>
<div class="main-container" ng-controller="mainCtrl">
    <div class="row">
        <%- include left_nav.ejs%>
        <div class="col-md-10 col-lg-10">
            <div class="main-part">
                <div class="h2">Product Categories</div>
                <div class="divider"></div>
                <div class="row">
                    <div class="box col-md-12">
                        <div class="box-inner">
                            <div class="box-header well">
                                <h2>Category List</h2>

                                <div class="box-icon">
                                    <a href="javascript:void(0)" class="btn btn-minimize btn-round btn-default" ng-click="hideList=!hideList"><i
                                                class="glyphicon" ng-class="{'glyphicon-chevron-up':!hideList,'glyphicon-chevron-down':hideList}"></i></a>
                                </div>
                            </div>
                            <div class="box-content" ng-hide="hideList">
                                <table class="table table-striped table-bordered">
                                <thead>
                                <tr role="row">
                                    <th rowspan="1" colspan="1" >Name</th>
                                    <th rowspan="1" colspan="1" >Simple Chinese Name</th>
                                    <th rowspan="1" colspan="1" >Traditional Chinese Name</th>
                                    <th rowspan="1" colspan="1" >Products Number</th>
                                    <th rowspan="1" colspan="1" >Remark</th>
                                    <th rowspan="1" colspan="1" >Actions</th>
                                </tr>
                                </thead>

                                <tbody><tr class="odd" ng-repeat="category in list track by id" ng-class="{odd:$odd,even:$even}">
                                    <td ng-bind="category.name_us"></td>
                                    <td ng-bind="category.name_cn"></td>
                                    <td ng-bind="category.name_hk"></td>
                                    <td ng-bind="category.product_num"></td>
                                    <td ng-bind="category.remark"></td>
                                    <td>
                                        <a class="btn btn-success" href="#">
                                            <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                                            Products
                                        </a>
                                        <a class="btn btn-info" href="#">
                                            <i class="glyphicon glyphicon-edit icon-white"></i>
                                            Edit
                                        </a>
                                        <a class="btn btn-danger" href="#">
                                            <i class="glyphicon glyphicon-trash icon-white"></i>
                                            Delete
                                        </a>
                                    </td>
                                </tr></tbody></table>
                            </div>
                        </div>
                    </div>
            </div>
                <div class="row">
                    <div class="box col-md-12">
                        <div class="box-inner">
                            <div class="box-header well">
                                <h2>Add New Category</h2>

                                <div class="box-icon">
                                    <a href="javascript:void(0)" class="btn btn-minimize btn-round btn-default" ng-click="hideAddContent=!hideAddContent;"><i
                                                class="glyphicon" ng-class="{'glyphicon-chevron-up':!hideAddContent, 'glyphicon-chevron-down':hideAddContent}"></i></a>
                                </div>
                            </div>
                            <div class="box-content" ng-hide="hideAddContent">
                                <p>continue...</p>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
