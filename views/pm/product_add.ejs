<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ../common_head.ejs%>
</head>
<body ng-controller="mainCtrl">
<%- include ../common_header.ejs%>
<div class="main-container">
    <div class="row">
        <%- include left_nav.ejs%>
        <div class="col-md-10 col-lg-10">
            <div class="main-part">
                <div class="h2">Add New Product</div>
                <div class="divider"></div>
                <form role="form">
                    <div class="row">
                        <div class="form-group col-sm-4" ng-class="{'has-error':errorShow.name_us&&!product.name_us}">
                            <label for="name_us">Name:</label>
                            <input type="text" id="name_us" ng-model="product.name_us" class="form-control" placeholder="english name" required ng-blur="valid('name_us');">
                            <span class="text-danger" style="display: none;" remove-display-none ng-show="errorShow.name_us&&!product.name_us">required</span>
                        </div>
                        <div class="form-group col-sm-4" ng-class="{'has-error':errorShow.name_cn&&!product.name_cn}">
                            <label for="name_cn">Simple Chinese Name:</label>
                            <input type="text" id="name_cn" ng-model="product.name_cn" class="form-control" placeholder="simple chinese name" required ng-blur="valid('name_cn');">
                            <span class="text-danger" style="display: none;" remove-display-none ng-show="errorShow.name_cn&&!product.name_cn">required</span>
                        </div>
                        <div class="form-group col-sm-4" ng-class="{'has-error':errorShow.name_hk&&!product.name_hk}">
                            <label for="name_hk">Traditional Chinese Name:</label>
                            <input type="text" id="name_hk" ng-model="product.name_hk" class="form-control" placeholder="traditional chinese name" required ng-blur="valid('name_hk');">
                            <span class="text-danger" style="display: none;" remove-display-none ng-show="errorShow.name_hk&&!product.name_hk">required</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-4">
                            <label>Category:</label>
                            <div class="form-control btn-group form-control-select" dropdown is-open="cOpened">
                                <button type="button" class="btn dropdown-toggle">
                                    <span class="select-display-text" ng-bind="categoryName"></span><span class="caret pull-right"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <% for(var i = 0, len=doc.categories.length; i < len; ++i){var cat=doc.categories[i];%>
                                        <li><a href="javascript:void(0)" ng-click="selectCategory($event, <%=cat.id%>, '<%=cat.name_us%>');"><%=cat.name_us%></a></li>
                                    <%}%>
                                </ul>
                            </div>
                        </div>
                        <div class="form-group col-sm-4">
                            <label>Brand:</label>
                            <div class="form-control btn-group form-control-select" dropdown is-open="bOpened">
                                <button type="button" class="btn dropdown-toggle">
                                    <span class="select-display-text" ng-bind="brandName"></span><span class="caret pull-right"></span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <% for(var i = 0, len=doc.brands.length; i < len; ++i){var brand=doc.brands[i];%>
                                    <li><a href="javascript:void(0)" ng-click="selectBrand($event, <%=brand.id%>, '<%=brand.name_us%>');"><%=brand.name_us%></a></li>
                                    <%}%>
                                </ul>
                            </div>
                        </div>
                        <div class="form-group col-sm-4">
                            <div class="checkbox" style="padding-top: 20px;">
                                <label>
                                    <input type="checkbox" ng-model="product.infinity_flag"> Infinity Quantity
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-4">
                            <label for="remark">Remark:</label>
                            <textarea type="text" id="remark" ng-model="product.remark" rows="6" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2 col-sm-offset-8">
                            <button class="btn btn-success btn-landmark btn-block" ng-click="submit($event);">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include ../common_footer.ejs%>
</body>
<script type="text/javascript" src="/requirejs_config.js"></script>
<script data-main="app/pm/productAddMain" src="/bower_components/requirejs/require.js"></script>
</html>
