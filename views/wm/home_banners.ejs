<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ../common_head.ejs%>
</head>
<body ng-controller="mainCtrl">
<%- include ../common_header.ejs%>
<div class="main-container">
    <div class="row">
        <%- include left_nav.ejs%>
        <div class="col-md-10 col-lg-10">
            <div class="main-part">
                <div class="h2"><%=doc.title%></div>
                <div class="divider"></div>
                <tabset justified="true">
                    <tab heading="English Website" select="selectLocale('us');"></tab>
                    <tab heading="Simple Chinese Website" select="selectLocale('cn');"></tab>
                    <tab heading="Traditional Chinese Website" select="selectLocale('hk');"></tab>
                </tabset>
                <table class="table table-striped table-bordered" style="margin-top: 10px;">
                    <thead>
                    <tr role="row">
                        <th rowspan="1" colspan="1" >ID</th>
                        <th rowspan="1" colspan="1" >Title</th>
                        <th rowspan="1" colspan="1" >Sub Title</th>
                        <th rowspan="1" colspan="1" >Label</th>
                        <th rowspan="1" colspan="1" >x</th>
                        <th rowspan="1" colspan="1" >y</th>
                        <th rowspan="1" colspan="1" >Image</th>
                        <th rowspan="1" colspan="1" >Target Url</th>
                        <th rowspan="1" colspan="1" >Open New</th>
                        <th rowspan="1" colspan="1" >Display</th>
                        <th rowspan="1" colspan="1" >Actions</th>
                    </tr>
                    </thead>

                    <tbody>
                        <tr class="odd" ng-repeat="item in list track by item.id" ng-class="{odd:$odd,even:$even}" style="text-align: center;">
                            <td ng-bind="item.id"></td>
                            <td><input name="title" ng-model="item.title" class="form-control"></td>
                            <td><input name="sub_title" ng-model="item.sub_title" class="form-control"></td>
                            <td><input name="sub_title" ng-model="item.label" class="form-control"></td>
                            <td><input name="coordx" ng-model="item.coordx" class="form-control"></td>
                            <td><input name="coordy" ng-model="item.coordy" class="form-control"></td>
                            <td><a ng-href="/images/home_banners/{{item.id}}.{{item.extension}}?v={{item.img_version}}" target="_blank" ng-if="item.img_version">View</a><div class="btn-upload-wrap"><span lmp-file-upload data-upload-url="/wm/home_banner/upload-image/{{item.id}}" upload-call-back="uploadCallBack" data-index="{{$index}}" data-iframe-name="{{item.id}}"></span></div></td>
                            <td><input name="target" ng-model="item.target" class="form-control"></td>
                            <td><input type="checkbox" ng-model="item.open_new" ng-checked="item.open_new"></td>
                            <td><span class="glyphicon" ng-class="{'glyphicon-ok green':item.display,'glyphicon-remove red':!item.display}"></span></td>
                            <td>
                                <a class="btn btn-success" href="javascript:void(0)" ng-click="save(item);">
                                    <i class="glyphicon glyphicon-floppy-disk icon-white"></i>
                                    Save
                                </a>
                                <a class="btn btn-info" href="javascript:void(0)" ng-click="toggleDisplay(item);">
                                    <i class="glyphicon icon-white" ng-class="{'glyphicon-ok':!item.display,'glyphicon-remove':item.display}"></i>
                                    <span ng-if="!item.display">Display</span><span ng-if="item.display">hide</span>
                                </a>
                                <!--<a class="btn btn-danger" href="javascript:void(0)" ng-click="delete(item, $index);">
                                    <i class="glyphicon glyphicon-trash icon-white"></i>
                                    Delete
                                </a>-->
                            </td>
                        </tr>
                    </tbody>
                </table>
                <a href="javascript:void(0)" class="btn btn-success btn-landmark" ng-click="addNewOne(locale);">
                    <i class="glyphicon glyphicon-plus icon-white"></i>
                    Add
                </a>
            </div>
        </div>
    </div>
</div>
<%- include ../common_footer.ejs%>
</body>
<script type="text/javascript" src="/requirejs_config.js"></script>
<script data-main="app/wm/homeBannersMain" src="/bower_components/requirejs/require.js"></script>
</html>
