<!DOCTYPE html>
<html lang="en">
<head>
    <title>Landmark OA Login</title>
    <link rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body style="overflow: hidden;">
<div class="login-container center">
    <div class="row">

        <div class="row">
            <div class=" center login-header">
                <h2 class="lmp-color">Landmark OA System</h2>
            </div>
            <!--/span-->
        </div><!--/row-->

        <div class="row">
            <div class="well center login-box">
                <form class="form-horizontal" ng-controller="loginCtrl">
                    <fieldset>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user lmp-color"></i></span>
                            <input type="text" class="form-control" placeholder="Username" ng-model="info.nick">
                        </div>
                        <div class="clearfix"></div><br>

                        <div class="input-group input-group-lg">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock lmp-color"></i></span>
                            <input type="password" class="form-control" placeholder="Password" ng-model="info.pwd">
                        </div>
                        <div class="clearfix"></div>

                        <div class="input-prepend">
                            <label class="remember" for="remember"><input type="checkbox" id="remember" ng-model="info.remember"> Remember me</label>
                        </div>
                        <div class="pull-left text-danger" ng-bind="errMsg"></div>
                        <div class="clearfix"></div>

                        <p class="center col-md-5">
                            <button class="btn btn-block btn-landmark" ng-click="login($event);">Login</button>
                        </p>
                    </fieldset>
                </form>
            </div>
            <!--/span-->
        </div><!--/row-->
    </div><!--/fluid-row-->

</div>
</body>
<script type="text/javascript" src="/requirejs_config.js"></script>
<script data-main="app/login/indexMain" src="/bower_components/requirejs/require.js"></script>
</html>
